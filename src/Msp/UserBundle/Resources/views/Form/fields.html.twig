                </div>
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class="span6">
            {# Affichage du champ numeroPortable #}
            <div class="control-group">
                {{ form_label(form.numeroPortable, null, {'label_attr': {'class' : 'control-label' }}) }}
                <div class="controls">
                {% if form.numeroPortable.vars.errors|length %}
                    {{ form_widget(form.numeroPortable, {'attr' : {'class' : 'offset1 span11 alert'}}) }}
                {% else %}
