{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ExerciceCorrige list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Exercice</th>
                <th>Corrige</th>
                <th>Urlpdf</th>
                <th>Urlvideo</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('exercicecorrige_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.exercice }}</td>
                <td>{{ entity.corrige }}</td>
                <td>{{ entity.urlPdf }}</td>
                <td>{{ entity.urlVideo }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('exercicecorrige_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('exercicecorrige_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('exercicecorrige_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
