{% extends "MspFrontendBundle::user-layout.html.twig" %}

{# Le titre de la page (defaut MathSup) #}
{% block title %}PROFESSEUR "{{ entity.nom }} {{ entity.prenom }}" | {{ parent() }}{% endblock %}
{# La description de la page (defaut vide) #}
{% block description %}{% endblock %}
{# Les mots clés de la page (defaut vide) #}
{% block keywords %}{% endblock %}
{# Indication pour les robots de la page  (defaut all) #}
{% block robots %}noindex, nofollow{% endblock %}

{# Le titre de l'entête du document #}
{% block entetetitle %}PROFESSEUR "{{ entity.nom }} {{ entity.prenom }}" | {{ parent() }}{% endblock %}
{# La barre latéralke de la page #}
{% block aside %}{{ parent() }}{% endblock %}
{# Le contenu de la page #}

{% block body -%}
    <h1>PROFESSEUR "{{ entity.nom }} {{ entity.prenom }}"</h1>

    <table class="table table_hover">
        <tbody>            
            <tr>
                <th>NOM</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ entity.prenom }}</td>
            </tr>            
            <tr>
                <th>Sexe</th>
                <td>{% if entity.sexe == 'H' %}Homme{% elseif entity.sexe == 'F' %}Femme{% endif %}</td>
            </tr>            
            <tr>
                <th>Département</th>
                <td>{{ entity.departement }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ entity.ville }}</td>
            </tr>
            <tr>
                <th>Etablissement</th>
                <td>{{ entity.etablissement }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ entity.adresse }}</td>
            </tr> 
            <tr>
                <th>Numéro Fixe</th>
                <td>{{ entity.numeroFixe }}</td>
            </tr>
            <tr>
                <th>Numéro Portable</th>
                <td>{{ entity.numeroPortable }}</td>
            </tr> 
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr> 
            <tr>
                <th>Niveau</th>
                <td></td>
            </tr>            
        </tbody>
    </table>

        <ul class="inline">
    <li>
        <a class="btn" href="{{ path('professeur') }}">
            <i class="icon-chevron-left"></i> Retour à la liste
        </a>
    </li>
    <li>
        <a class="btn" href="{{ path('professeur_edit', { 'id': entity.id }) }}">
            Modifier <i class="icon-edit"></i>
        </a>
    </li>
    <li>
        <form action="{{ path('professeur_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Supprimer <i class="icon-remove"></i></button>
        </form>
    </li>
</ul>
{% endblock %}
