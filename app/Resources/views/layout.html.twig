<!doctype html>
<html lang="fr">
    <head>
        
        <title>{% block title %}MathSup{% endblock %}</title>
        
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="description" content="{% block description %}{% endblock %}"/>        
        <meta name="keywords" lang="fr" content="{% block keywords %}{% endblock %}"/>
        <meta name="robots" content="{% block robots %}all{% endblock %}"/>
        
        {% block stylesheets %}
            {% stylesheets output='css/style.css' filter='cssrewrite' 'css/*' 'bundles/sdzblog/css/*' %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
        
        {% block jsForIE %}
            {# Pour la compatibilité IE6-8 #}
            <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->
        {% endblock %}
        
    </head>
    <body>    
        <div class="container">
            <header class="span12">
                
                <h1 class="span12 text-center titre">{% block entetetitle %}MathSup{% endblock %}</h1>
                
                <div class="span3">
                    <a href="{{ path('msp_frontend_homepage') }}">
                        <img src="{{ asset('apple-touch-icon.png') }}" alt="logo" height="60" width="60"/>
                    </a>
                </div>
                
                <div class="span8">
                    
                    <adress class="span8 text-right">
                        RENSEIGNEMENTS ET INSCRIPTION AU <strong>01 42 30 50 11</strong>
                    </adress>
                                                           
                    <nav class="span8">
                        <ul class="nav nav-pills pull-right">
                            <li><a href="{{ path('msp_qui_sommes_nous') }}">QUI SOMMES NOUS?</a></li>
                            <li><a href="{{ path('msp_contact') }}">CONTACT</a></li>
                            <li><a href="{{ path('msp_math_plus') }}">MATH PLUS</a></li>
                            <li><a href="{{ path('msp_faq') }}">FAQ</a></li>                            
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li>
                            {# L'utilisateur est-il admin ? #}
                            {% if is_granted('ROLE_ADMIN') %}
                                {# L'utilisateur est admin ! #}
                                <a href="{{ path('msp_admin', { slug: app.user.slug }) }}">ADMIN</a>
                            {# L'utilisateur est-il eleve ? #}   
                            {% elseif is_granted('ROLE_ELEVE') %}                                                             
                                {# L'utilisateur est eleve ! #}                                
                                <a href="{{ path('msp_eleve', { slug: app.user.slug }) }}">PROFIL</a>
                            {# L'utilisateur est-il professeur ? #}      
                            {% elseif is_granted('ROLE_PROFESSEUR') %}                                                      
                                {# L'utilisateur est professeur ! #}
                                <a href="{{ path('msp_professeur', { slug: app.user.slug }) }}">PROFIL</a>
                            {% endif %}
                            </li>
                            {% endif %}                            
                            
                        </ul>
                    </nav>
                    
                </div>
                
            </header>
                
            <section class="span12">
                {% block aside %}
                    <aside class="span2">

                        <ul class="nav nav-list">
                            
                            {% block primaire %}
                            <li><a href="{{ path('msp_primaire') }}">PRIMAIRE</a></li>
                            {% endblock %}
                                
                            {% block college %}
                            <li>
                                <a href="{{ path('msp_college') }}">COLLÈGE</a>                                
                            </li>
                            {% endblock %}
                            
                            {% block lycee %}
                            <li>
                                <a href="{{ path('msp_lycee') }}">LYCÉE</a>                                
                            </li>
                            {% endblock %}

                            {% block universite %}
                            <li>
                                <a href="{{ path('msp_universite') }}">UNIVERSITÉ</a>                                
                            </li>
                            {% endblock %}

                            {% block institution %}
                            <li>
                                <a href="{{ path('msp_institution') }}">INSTITUTION</a>                               
                            </li>
                            {% endblock %}
                            
                        </ul>
                        
                        <hr/>
                        
                        {# L'utilisateur est-il connecté ? #}
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {# L'utilisateur est connecté ! #}                            
                            {% render url("msp_conference_form") %}
                            <p>
                                <a class="btn btn-danger btn-block" href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                            </p>
                        {% else %}
                            <form id="connexion" action="{{ path("fos_user_security_check") }}" method="post">
                                <fieldset class="text-center">
                                    <input type="text" id="username" name="_username" class="input-small" placeholder="Login" required="required" />
                                    <input type="password" id="password" name="_password"  class="input-small" placeholder="Mot de passe" required="required" />
                                    <input type="submit" id="_submit" class="btn btn-primary" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                                </fieldset>
                            </form>
                        {% endif %}

                    </aside>
                {% endblock %}                
                
                {% block content %}
                    
                {% endblock %}                       
                
            </section>
                
            <footer class="span12">
                
                <ul class="inline pull-right">
                    <li><a href="{{ path('msp_tarifs') }}">Tarifs</a></li>
                    <li><a href="{{ path('msp_partenariats') }}">Partenariats</a></li>
                    <li><a href="{{ path('msp_nos_engagements') }}">Nos engagements</a></li>
                    <li><a href="{{ path('msp_cgs') }}">CGS</a></li>
                    <li><a href="{{ path('msp_plan_du_site') }}">Plan du site</a></li>
                    <li><a href="{{ path('msp_liens') }}">Liens</a></li>
                    <li>© mathsup.net</li>
                </ul>
                
            </footer>           
                
        </div>
        
        {% block javascripts1 %}
        {# inclusion de la librairie de jquery #}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>            
        {% endblock %}
        
        {% block javascripts2 %}
            {% javascripts output='js/main.js' filter='' 'js/*' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
