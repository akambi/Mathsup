                    <h2>UNIVERSIT&Eacute;</h2>
                    
                    <h2>INSTITUTION</h2>
                    
                </aside>
                
                <article class="span8">
                    
                    {% block content %}
                    {% endblock %}
                    
                </article>       
                
            </section>
                
            <footer class="span12">
                <ul class="nav nav-pills">
                    <li><a href="">Tarifs</a></li>
                    <li><a href="">Partenariats</a></li>
                    <li><a href="">Nos engagements</a></li>
                    <li><a href="">CGS</a></li>
